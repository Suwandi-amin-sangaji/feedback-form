{"ast":null,"code":"import { BFormSlider, BFormGroup } from 'bootstrap-vue';\nexport default {\n  name: 'App',\n  components: {\n    BFormSlider,\n    BFormGroup\n  },\n  data() {\n    return {\n      selectedRating: 3,\n      // Default value or null if not pre-selected\n      showModal: true // Set to true to show the modal on page load\n    };\n  },\n  methods: {\n    async submitFeedback() {\n      if (!this.selectedRating) {\n        alert('Please select a rating before submitting.');\n        return;\n      }\n      const feedbackData = {\n        rating: this.selectedRating,\n        comments: '' // You can add comments field if needed\n      };\n      try {\n        const response = await fetch('/api/feedback/', {\n          method: 'POST',\n          headers: {\n            'Content-Type': 'application/json'\n          },\n          body: JSON.stringify(feedbackData)\n        });\n        if (response.ok) {\n          this.showModal = false; // Hide modal on successful submission\n        } else {\n          throw new Error('Failed to submit feedback');\n        }\n      } catch (error) {\n        console.error('Error submitting feedback:', error);\n        // Handle error state in your UI\n      }\n    },\n    closeModal() {\n      this.showModal = false;\n    }\n  }\n};","map":{"version":3,"names":["BFormSlider","BFormGroup","name","components","data","selectedRating","showModal","methods","submitFeedback","alert","feedbackData","rating","comments","response","fetch","method","headers","body","JSON","stringify","ok","Error","error","console","closeModal"],"sources":["/home/wandy/Documents/Technical/frontend/feedback-form/src/components/FeedbackForm.vue"],"sourcesContent":["<template>\n  <div id=\"app\">\n    <!-- Rating Popup Modal -->\n    <div v-if=\"showModal\" class=\"modal\">\n      <div class=\"modal-content\">\n        <span class=\"close\" @click=\"closeModal\">&times;</span>\n        <div class=\"rating-range\">\n          <b-form-group label=\"How would you rate your satisfaction?\" label-for=\"ratingSlider\">\n            <b-form-slider\n              id=\"ratingSlider\"\n              v-model=\"selectedRating\"\n              :min=\"1\"\n              :max=\"5\"\n              :step=\"1\"\n              ticks\n              tooltip=\"always\"\n            ></b-form-slider>\n          </b-form-group>\n        </div>\n        <button @click=\"submitFeedback\" class=\"btn-submit\">Submit</button>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { BFormSlider, BFormGroup } from 'bootstrap-vue';\n\nexport default {\n  name: 'App',\n  components: {\n    BFormSlider,\n    BFormGroup,\n  },\n  data() {\n    return {\n      selectedRating: 3, // Default value or null if not pre-selected\n      showModal: true, // Set to true to show the modal on page load\n    };\n  },\n  methods: {\n    async submitFeedback() {\n      if (!this.selectedRating) {\n        alert('Please select a rating before submitting.');\n        return;\n      }\n\n      const feedbackData = {\n        rating: this.selectedRating,\n        comments: '', // You can add comments field if needed\n      };\n\n      try {\n        const response = await fetch('/api/feedback/', {\n          method: 'POST',\n          headers: {\n            'Content-Type': 'application/json',\n          },\n          body: JSON.stringify(feedbackData),\n        });\n\n        if (response.ok) {\n          this.showModal = false; // Hide modal on successful submission\n        } else {\n          throw new Error('Failed to submit feedback');\n        }\n      } catch (error) {\n        console.error('Error submitting feedback:', error);\n        // Handle error state in your UI\n      }\n    },\n    closeModal() {\n      this.showModal = false;\n    },\n  },\n};\n</script>\n\n<style scoped>\n#app {\n  font-family: 'Avenir', Helvetica, Arial, sans-serif;\n  color: #2c3e50;\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  height: 100vh;\n}\n\n.modal {\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  position: fixed;\n  z-index: 1;\n  left: 0;\n  top: 0;\n  width: 100%;\n  height: 100%;\n  overflow: auto;\n  background-color: rgba(0, 0, 0, 0.4);\n}\n\n.modal-content {\n  background-color: #fefefe;\n  padding: 20px;\n  border: 1px solid #888;\n  width: 80%;\n  max-width: 400px;\n  text-align: center;\n  border-radius: 10px;\n  position: relative;\n}\n\n.close {\n  position: absolute;\n  top: 10px;\n  right: 10px;\n  font-size: 24px;\n  cursor: pointer;\n  color: #aaa;\n}\n\n.rating-range {\n  margin-top: 20px;\n}\n\n.btn-submit {\n  background-color: #4caf50;\n  color: white;\n  border: none;\n  padding: 10px 20px;\n  cursor: pointer;\n  margin-top: 20px;\n  border-radius: 5px;\n  transition: background-color 0.3s;\n}\n\n.btn-submit:hover {\n  background-color: #45a049;\n}\n</style>\n"],"mappings":"AA0BA,SAASA,WAAW,EAAEC,UAAS,QAAS,eAAe;AAEvD,eAAe;EACbC,IAAI,EAAE,KAAK;EACXC,UAAU,EAAE;IACVH,WAAW;IACXC;EACF,CAAC;EACDG,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,cAAc,EAAE,CAAC;MAAE;MACnBC,SAAS,EAAE,IAAI,CAAE;IACnB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,cAAcA,CAAA,EAAG;MACrB,IAAI,CAAC,IAAI,CAACH,cAAc,EAAE;QACxBI,KAAK,CAAC,2CAA2C,CAAC;QAClD;MACF;MAEA,MAAMC,YAAW,GAAI;QACnBC,MAAM,EAAE,IAAI,CAACN,cAAc;QAC3BO,QAAQ,EAAE,EAAE,CAAE;MAChB,CAAC;MAED,IAAI;QACF,MAAMC,QAAO,GAAI,MAAMC,KAAK,CAAC,gBAAgB,EAAE;UAC7CC,MAAM,EAAE,MAAM;UACdC,OAAO,EAAE;YACP,cAAc,EAAE;UAClB,CAAC;UACDC,IAAI,EAAEC,IAAI,CAACC,SAAS,CAACT,YAAY;QACnC,CAAC,CAAC;QAEF,IAAIG,QAAQ,CAACO,EAAE,EAAE;UACf,IAAI,CAACd,SAAQ,GAAI,KAAK,EAAE;QAC1B,OAAO;UACL,MAAM,IAAIe,KAAK,CAAC,2BAA2B,CAAC;QAC9C;MACF,EAAE,OAAOC,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,4BAA4B,EAAEA,KAAK,CAAC;QAClD;MACF;IACF,CAAC;IACDE,UAAUA,CAAA,EAAG;MACX,IAAI,CAAClB,SAAQ,GAAI,KAAK;IACxB;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}